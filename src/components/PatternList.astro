---
import PatternListItem from './PatternListItem.astro';

/** @param {{ patterns: { id: string; data: { title: string; description: string } }[] }} */
const { patterns } = Astro.props;
---

<ul class="space-y-2 list-none p-0 m-0" aria-label="Pattern library entries">
	{patterns.map((pattern) => (
		<PatternListItem
			id={pattern.id}
			title={pattern.data.title}
			description={pattern.data.description}
		/>
	))}
</ul>
