---
/** @param {{ tags: string[] }} */
const { tags = [] } = Astro.props;
---

{tags.length > 0 ? (
	<ul class="tags-list flex flex-wrap gap-1.5 list-none p-0 m-0" aria-label="Tags">
		{tags.map((tag: string) => (
			<li>
				<span
					class="inline-block px-2 py-0.5 text-xs font-medium rounded bg-slate-200 text-slate-700 dark:bg-slate-700 dark:text-slate-300"
				>
					{tag}
				</span>
			</li>
		))}
	</ul>
) : null}
